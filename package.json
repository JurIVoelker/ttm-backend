{
  "name": "ttm-backend",
  "scripts": {
    "dev": "bun dev:db && bun --bun run  --hot src/index.ts",
    "dev:db": "bun --bun src/scripts/dev/start-db.ts && bun --bun db:wait &&  bun --bun run src/scripts/dev/seed-db.ts",
    "db:migrate": "bunx --bun prisma migrate dev && bunx --bun prisma generate",
    "db:wait": "wait-port localhost:5432",
    "lint": "eslint",
    "deploy:file": "bun build src/index.ts --target=bun --compile --outfile=out/server --minify --sourcemap",
    "deploy": "bun build src/index.ts --target=bun --outdir=out --minify --sourcemap"
  },
  "dependencies": {
    "@hono/eslint-config": "^2.0.5",
    "@hono/zod-validator": "^0.7.6",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "hono": "^4.11.3",
    "jsonwebtoken": "^9.0.3",
    "oslo": "^1.2.1",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.2.0",
    "slugify": "^1.6.6",
    "wait-port": "^1.1.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
